.survey__questions-list
  .survey__admin-actions
    = link_to "Add New Question", new_question_group_question_path(@question_group), :class => 'button button--no-margin'
  - if @questions.length > 1
    .survey__admin-tools
      %span.contextual Drag to reorder questions. (Changes will be saved automatically.)
  %ul.list.list--survey{"data-sortable-questions" => @question_group.id}
    = render partial: 'rapidfire/questions/question', collection: @questions
