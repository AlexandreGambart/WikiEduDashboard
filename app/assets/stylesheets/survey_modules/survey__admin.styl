body.survey-page
  .survey__edit,
  .survey__admin
    // max-width 800px
    .block
      max-width 100%

    & > h2
      color white

  .form-inputs.survey__title-input
    margin-bottom $spacer * 4

.survey__admin__nav
  overflow hidden
  background white

  ul
    list-style none

  li
    float left
    margin 0
    border-right rgba($contextual, .25) 1px solid

  a
    padding $spacer
    display block
    text-decoration none
    color $text
    &.active
      background rgba($contextual, .25)


.survey__admin
  trix-editor
    background-color athens
    margin-bottom $spacer * 2



.survey__title-input input[type=text]
  width 100%
  max-width 500px
